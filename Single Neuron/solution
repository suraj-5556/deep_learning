import math
import numpy as np
def single_neuron_model(features: list[list[float]], labels: list[int], weights: list[float], bias: float) -> (list[float], float):
	# Your code here
	probabilities=[]
	def sigmoid(val):
		return 1/(1+math.e**(-val))
	for i in range (0,len(features)):
		val=sum(np.array(features[i])*np.array(weights))+bias
		val=round(sigmoid(val),4)
		probabilities.append(val)
	loss=0
	for i in range (0,len(labels)):
		loss=loss+(probabilities[i]-labels[i])**2
	return probabilities,round(loss/len(labels),4)
